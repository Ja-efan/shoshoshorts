{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "moduleResolution": "node",
      "target": "ES2020",
      "lib": ["ES2020", "DOM"],
      "allowJs": true,
      "checkJs": false,
      "jsx": "react-jsx"
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": [
      "node_modules",
      "**/*.test.ts",
      "**/*.test.tsx",
      "**/__tests__/**"
    ]
  }
  